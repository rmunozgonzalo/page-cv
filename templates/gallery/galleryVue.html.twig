      <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
          <h3 class="header-title">
            Di hola a <em>GM</em>
          </h3>
          <div class="close-btn"><img src="{{ asset('img/close_contact.png') }}" alt=""></div>
        </div>
        <!-- Modal Body -->
        <div class="modal-body">
