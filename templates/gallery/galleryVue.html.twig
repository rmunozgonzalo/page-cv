      </div>
    </div>



    <section class="overlay-menu">
      <div class="container">
        <div class="row">
          <div class="main-menu">
              <ul>
                  <li>
                      <a href="{{ path('galeria') }}">Home</a>
                  </li>
              </ul>
              <p>Thanks TemplateMo.</p>
          </div>
        </div>
      </div>
    </section>

